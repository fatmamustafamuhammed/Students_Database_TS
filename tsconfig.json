{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "target": "esnext",
    "module": "esnext",
    "types": [
      "node"
    ],
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": true,
    "preserveConstEnums": true,
    "noImplicitOverride": true,
    "checkJs": true,
  },
  "include": [
    "src/**/*",
    "src/index.ts"
  ]
}